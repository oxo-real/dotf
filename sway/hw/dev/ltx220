# sway specific hardware configuration

# lenovo_thinkpad_x220

## internal input devices	(identifiers)
set $keyboard			1:1:AT_Translated_Set_2_keyboard
set $touchpad			2:7:SynPS/2_Synaptics_TouchPad

## internal output devices
### Seiko Epson Corporation 0x3047 0x00000000
### maximum performance:	mode 1366x768 @ 60.002 Hz

## main output
output LVDS-1
{
	mode		1366x768
	scale  	     	1.0
	transform    	0
}

## NOTICE main output position is set in config

set    $x_res_main	1366
set    $y_res_main  	768

## external devices
include $XDG_CONFIG_HOME/sway/dev/ext

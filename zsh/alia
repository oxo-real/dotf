function say ()
{
    # usage: say sdate
    #        sdate | say
    spch="$@"
    [[ -z $@ ]] && spch="$(</dev/stdin)"
    echo "$spch" | festival --tts
}


# time

alias now='date +%s'

function nwx ()
{
    ## 20250125_052505
    printf '%X\n' "$(date +'%s')"
}

function dtx ()
{
    ## 20250125_082604_6794920C
    printf '%s_%X\n' "$(date $DT)" "$(date +'%s')"
}

## (for say)

function say ()
{
    # usage: say $(sdate)
    #        sdate | say
    spch="$@"
    [[ -z $@ ]] && spch="$(</dev/stdin)"
    echo "$spch" | espeak
    # echo "$spch" | festival --tts
}


# date time epoch functions

## epoch decimal
alias now="date $TEPOCH"

## epoch hexadecimal
alias nowx="printf '%X\n' $(date $TEPOCH)"

function nown ()
{
    ## epoch nano decimal
    ## 1756211992.012016380

    ## #+ remove until first plus sign
    ## %0.9f 9 decimal floating point
    local tsen=$(date ${TEPOCH}.${TNANO#+})
    printf '%0.9f\n' "${tsen}"
}

function nownx ()
{
    ## epoch nano hexadecimal
    ## 68AC16C1.2ba33425

    ## #+ remove until first plus sign
    local tsen=$(date ${TEPOCH}.${TNANO#+})
    printf '%X.%x\n' "${tsen%.*}" "${tsen#*.}"
}

## dt prints datetime (default: decimal)
function dt ()
{
    ## date time decimal
    ## 20250825_100736

    local tse=$(date ${TEPOCH})
    date --date @${tse} +'%Y%m%d_%H%M%S'
}

function dte ()
{
    ## date time epoch decimal
    ## 20250825_100736_1756211992

    local tse=$(date ${TEPOCH})
    local tsd=$(date --date @${tse} +"$TDATE")
    local tst=$(date --date @${tse} +"$TTIME")
    printf '%d_%d_%d\n' "${tsd}" "${tst}" "${tse}"
}

function dtex ()
{
    ## date time epoch all hexadecimal
    ## 126B033C8C87_68AC1907

    local tse=$(date ${TEPOCH})
    local tsd=$(date --date @${tse} +"$TDATE")
    local tst=$(date --date @${tse} +"$TTIME")
    printf '%d_%d_%x\n' "${tsd}" "${tst}" "${tse}"
}

function dten ()
{
    ## date time epoch decimal
    ## 20250826_171150_1756221110.129674445

    local tsen=$(date ${TEPOCH}.${TNANO#+})
    local tse=$(date --date @${tsen} +"$TEPOCH")
    local tsd=$(date --date @${tsen} +"$TDATE")
    local tst=$(date --date @${tsen} +"$TTIME")
    local tsn=$(date --date @${tsen} +"$TNANO")
    printf '%d_%d_%d.%d\n' "${tsd}" "${tst}" "${tse}" "${tsn}"
}

function dtenx ()
{
    ## date time epoch hexadecimal
    ## 126B033C8C87_68AC1907.2ba33425

    local tsen=$(date ${TEPOCH}.${TNANO#+})
    local tse=$(date --date @${tsen} +"$TEPOCH")
    local tsd=$(date --date @${tsen} +"$TDATE")
    local tst=$(date --date @${tsen} +"$TTIME")
    local tsn=$(date --date @${tsen} +"$TNANO")
    printf '%X_%X_%X.%x\n' "${tsd}" "${tst}" "${tse}" "${tsn}"
}


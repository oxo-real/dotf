## rsync for copy and move (better for large files)
function cpr ()
{
    rsync -aAXv --info=progress2,stats2 --partial --human-readable --modify-window=1 "$@"
}


function mvr ()
{
    rsync -aAXv --info=progress2,stats2 --partial --human-readable --modify-window=1 --remove-source-files "$@"
}



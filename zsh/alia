## generate qr code
function qr ()
{
    ## usage: qr $(wl-paste)
    ##        echo hello | qr
    args="$@"
    [[ -z "$args" ]] && args="$(</dev/stdin)"
    ## qrcode inverse colors; using qrinv
    [[ $(command -v qrinv > /dev/null 2>&1) ]] \
	&& qrinv "$args" \
	    || qrencode --type utf8 "$args"
	    ## qrcode default colors; using qrencode
}


function wh ()
{
    printf '%s\n' 'which'
    which $1
    # echo
    printf '%s\n' 'whereis'
    whereis $1
    # echo
    printf '%s\n' 'whatis'
    whatis $1
}



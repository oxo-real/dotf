#>>>>>>>>>>>>>> function sudo_toggle
# sudo-toggle (vicmd s)

function sudo_toggle()
{
	[[ -z $BUFFER ]] && zle up-history

	if [[ $BUFFER == sudo\ * ]]; then
		#already sudo; remove sudo
		BUFFER="${BUFFER#sudo }"
	else
		BUFFER="sudo $BUFFER" #add sudo
	fi

	zle -R $BUFFER #refresh
}

zle -N sudo_toggle #create widget
bindkey -M vicmd 's' sudo_toggle



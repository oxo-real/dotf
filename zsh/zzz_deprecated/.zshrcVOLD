	# analyze fzf output
	[ -z "$fzf_output" ] && \
		CUTBUFFER="$fzf_input" || \
		CUTBUFFER="$fzf_output"

	# replace selection
	zle put-replace-selection

	unset CUTBUFFER
	unset fzf_input
}

zle -N fzf_ins_root

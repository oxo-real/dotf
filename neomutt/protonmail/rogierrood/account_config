# vim: filetype=neomuttrc

# neomutt specific config file
# for account
# protonmail_rogierrood

# load neomutt's main config settings first
# configs for colors, key bindings and macros are sourced from there
source		      	   	$XDG_CONFIG_HOME/neomutt/main_config

## file locations
set folder =			$XDG_DATA_HOME/a/email/protonmail/rogierrood
set attach_save_dir =		$XDG_DATA_HOME/a/email/protonmail/rogierrood/attach
set tmpdir =			$XDG_CACHE_HOME/neomutt/protonmail/temp
set header_cache =		$XDG_CACHE_HOME/neomutt/protonmail/rogierrood/headers
set message_cachedir =		$XDG_CACHE_HOME/neomutt/protonmail/rogierrood/bodies
set certificate_file =		$XDG_CONFIG_HOME/neomutt/protonmail/rogierrood/certificates
#set signature =		$XDG_CONFIG_HOME/neomutt/signature/empty
set mailcap_path =		$XDG_CONFIG_HOME/neomutt/mailcap

## smtp parameters
set sendmail =			'msmtp -a protonmail_rogierrood'
set from =			'rogierrood@protonmail.com'
set envelope_from_address =	'rogierrood@protonmail.com'
set realname =			'Rogier Rood'
set use_from =			yes
set use_envelope_from =		yes

## mailbox settings
## "+" will be expanded to $folder
set mbox_type =			maildir
set spoolfile  =		"+Inbox"
set record =			"+Sent"
set mbox =			"+Archive"
set postponed =			"+Drafts"
set trash =			"+Trash"

## "=" will be expanded to $folder
## expansion takes place when handling the "mailboxes" command
mailboxes =Inbox
mailboxes =Sent
mailboxes =Archive
mailboxes =Drafts
mailboxes =Trash

## account specific macros
macro index					O \
"<shell-escape>mbsync -V -c $XDG_CONFIG_HOME/isync/mbsync_config protonmail_rogierrood<enter>" "run offlineimap to sync all mail"

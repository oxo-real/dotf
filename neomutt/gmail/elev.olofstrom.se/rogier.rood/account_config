# vim: filetype=neomuttrc

# neomutt specific config file
# for account
# gmail_elev.olofstom.se_rogier.rood

# load neomutt's main config settings first
# configs for colors, key bindings and macros are sourced from there
source					$XDG_CONFIG_HOME/neomutt/main_config

## file locations
set folder =			$XDG_DATA_HOME/a/email/gmail/elev.olofstrom.se/rogier.rood
set attach_save_dir =	$XDG_DATA_HOME/a/email/gmail/elev.olofstrom.se/rogier.rood/attach
set tmpdir =			$XDG_CACHE_HOME/neomutt/gmail/elev.olofstrom.se/rogier.rood/temp
set header_cache =		$XDG_CACHE_HOME/neomutt/gmail/elev.olofstrom.se/rogier.rood/headers
set message_cachedir =	$XDG_CACHE_HOME/neomutt/gmail/elev.olofstrom.se/rogier.rood/bodies
set certificate_file =	$XDG_CONFIG_HOME/neomutt/gmail/elev.olofstrom.se/rogier.rood/certificates
#set signature =		$XDG_CONFIG_HOME/neomutt/signature/empty
set mailcap_path =		$XDG_CONFIG_HOME/neomutt/mailcap

## smtp parameters
set sendmail =				'msmtp -a elev.olofstrom.se_rogier.rood'
set from =					'rogier.rood@elev.olofstrom.se'
set envelope_from_address =	'rogier.rood@elev.olofstrom.se'
set realname =				'Rogier Rood'
set use_from =				yes
set use_envelope_from =		yes

## mailbox settings
## "+" will be expanded to $folder
set mbox_type =			maildir
set spoolfile  =		"+Inbox"
set record =			"+Send"
set trash =				"+Trash"
set mbox =				"+Archive"
set postponed =			"+Drafts"
#get list with: mbsync -V -l -c ~/.dot/.mbsyncrc elev.olofstrom.se_rogier.rood

## "=" will be expanded to $folder
## expansion takes place when handling the "mailboxes" command
mailboxes =Inbox
mailboxes =[Gmail]/Papperskorgen
mailboxes =[Gmail]/Skickat
mailboxes =[Gmail]/Skr&AOQ-ppost
mailboxes =[Gmail]/Stj&AOQ-rnm&AOQ-rkta
mailboxes =[Gmail]/Utkast
mailboxes =[Gmail]/Viktigt

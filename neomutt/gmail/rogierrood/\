# vim: filetype=neomuttrc

# neomutt specific config file
# for account
# protonmail_rogierrood

# load neomutt's main config settings first
# configs for colors, key bindings and macros are sourced from there
source					$XDG_CONFIG_HOME/neomutt/main_config

## file locations
set folder =			$XDG_DATA_HOME/email/gmail/rogierrood
set header_cache =		$XDG_CACHE_HOME/neomutt/gmail/rogierrood/headers
set message_cachedir =	$XDG_CACHE_HOME/neomutt/gmail/rogierrood/bodies
set certificate_file =	$XDG_CONFIG_HOME/neomutt/gmail/rogierrood/certificates
set signature =			$XDG_CONFIG_HOME/neomutt/signature
set mailcap_path =		$XDG_CONFIG_HOME/neomutt/mailcap
set tmpdir =			$XDG_CONFIG_HOME/neomutt/temp

## smtp parameters
set sendmail =				'msmtp -a gmail_rogierrood'
set from =					'rogierrood@gmail.com'
set envelope_from_address =	'rogierrood@gmail.com'
set realname =				'Rogier Rood'
set use_from =				yes
set use_envelope_from =		yes

## mailbox settings
set mbox_type =		maildir
## "+" will be expanded to $folder
set spoolfile  =	"+INBOX"
set record =		"+Sent Mail"
set postponed =		"+Drafts"
set trash =			"+Trash"

## "=" will be expanded to $folder
## expansion takes place when handling the "mailboxes" command
mailboxes =INBOX
mailboxes =''Sent Mail''
mailboxes =All Mail
mailboxes =Drafts
mailboxes =Starred
mailboxes =Trash

text/plain; \
vim %s;
copiousoutput

text/html; \
w3m \
-I %{charset} \
-T text/html; \
copiousoutput

text/html; \
lynx \
-assume_charset=%{charset} \
-display_charset=utf-8 \
-dump %s; \
nametemplate=%s.html; \
copiousoutput

application/pdf; \
zathura %s

application/pgp-encrypted; \
gpg \
-d %s; \
copiousoutput

application/pgp-keys; \
gpg \
--import %s; \
copiousoutput

image/*; \
feh %s

video/*; \
setsid mpv \
--quiet %s &; \
copiousoutput

audio/*; \
mpv %s

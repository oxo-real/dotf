# mbsyncrc
# configuration file for receiving email

########## protonmail_rogierrood ##########
# via protonmail_bridge

IMAPStore			protonmail_rogierrood_remote
Host				127.0.0.1
Port				1143
User				rogierrood@protonmail.com
SSLType				NONE
CertificateFile			/home/oxo/.config/neomutt/protonmail/rogierrood/certificates/
PassCmd				"pass protonmail_bridge | head -n 1"


MaildirStore			protonmail_rogierrood_local
# trailing slash designates a main folder
Path				/home/oxo/.local/share/a/email/protonmail/rogierrood/
Inbox				/home/oxo/.local/share/a/email/protonmail/rogierrood/Inbox
Subfolders			Verbatim


Channel				protonmail_rogierrood
Far				:protonmail_rogierrood_remote:
Near				:protonmail_rogierrood_local:
# create missing mailboxes on server and client side
Create				Both
Expunge				Both
# include all:
Patterns			*
# include specific:
#Patterns			* ![protonmail_rogierrood]* "[protonmail_rogierrood]/Sent"
# save sync state in relevant mail path:
SyncState			*

########## end_protonmail_rogierrood ##########


